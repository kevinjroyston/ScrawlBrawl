{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@core/*": ["app/core/*"],
      "@layout/*":["app/layout/*"],
      "@modules/*": [
        "app/modules/*"
      ],
    },
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
